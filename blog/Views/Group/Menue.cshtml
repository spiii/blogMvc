@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Post", null,
new { @class = "btn btn-block btn-default btn-lg"
	+ ( ViewBag.SelectedGroup == null ? " btn-primary" : "")
})


@foreach (var link in Model)
{
	@Html.RouteLink(link, new
	{
		controller = "Post",
		action = "List",
		group = link,
		page = 1
	}, new
	{
		@class = "btn btn-block btn-default btn-lg"
			+ (link == ViewBag.SelectedGroup ? " btn-primary" : "")
	})
}
