@model IEnumerable<blogBl.Post>
@{
	ViewBag.Title = "Admin: All Posts";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
	<div class="panel-heading">
		<h3>All Posts</h3>
	</div>
	<div class="panel-heading"	>
		@Html.ActionLink("Add a new post", "Create", null,
		new { @class = "btn btn-default" })
	</div>
	<div class="panel-body">
		<table class="table table-striped table-condensed table-bordered">
			<tr>
				<th class="text-right">ID</th>
				<th>title</th>
				<th class="text-center">Actions</th>
			</tr>
			@foreach (var item in Model)
			{
				<tr>
					<td class="text-right">@item.idPost</td>
					<td>@Html.ActionLink(item.title, "Edit", new { item.idPost })</td>
					<td class="text-center">
						@using (Html.BeginForm("Delete", "Admin"))
						{
							@Html.Hidden("ProductID", item.idPost)
							<input type="submit"
								   class="btn btn-default btn-xs"
								   value="Delete" />
						}
					</td>
				</tr>
			}
		</table>
	</div>
</div>